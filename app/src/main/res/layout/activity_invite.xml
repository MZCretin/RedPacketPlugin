<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cretin.www.redpacketplugin.activity.InviteActivity">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的邀请码"
                    android:textColor="@color/font_black1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_yaoqingma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="16dp"
                    android:text="123148782"
                    android:textColor="@color/font_black1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_copy_yqm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制邀请码"
                    android:textColor="@color/common_color"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="免费时长获取攻略："
                android:textColor="@color/font_black1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_strategy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="每成功邀请一位好友安装并注册App，即可获取一天的免费时长，新年10天左右的红包黄金时间，那么您只需要邀请10位好友即可畅享会员极速抢红包的快感。"
                android:textColor="@color/font_black1"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="\n如何邀请好友？有以下几种方式："
                android:textColor="@color/font_black1"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:text="第一种方式：用浏览器扫描下方二维码下载APP后注册"
                android:textColor="@color/font_black1"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_erweima"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:text="第二种方式：复制下方下载链接发送给好友，让好友在浏览器中打开这个链接下载APP后注册"
                android:textColor="@color/font_black1"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_copy_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_green_round100"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="点击复制下载链接"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp"
                android:text="第三种方式：分享到微信好友和微信朋友圈，让微信好友下载注册使用。"
                android:textColor="@color/font_black1"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/tv_weixin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_bg_selector"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/weixin"
                    android:gravity="center"
                    android:text="微信朋友"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_weixin_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_bg_selector"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/pengyouquan"
                    android:gravity="center"
                    android:text="微信朋友圈"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
