<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cretin.www.redpacketplugin.activity.VipInfoActivity">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_color"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.cretin.www.redpacketplugin.utils.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/avatar"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffe2a3"
                        android:textSize="@dimen/text_size_17"/>

                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/vip_gray"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_user_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#ccffffff"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_main_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="40dp"
                android:textColor="@color/red"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_xufei"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_round100"
                android:gravity="center"
                android:padding="10dp"
                android:text="立即续费会员"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_lishi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_button_round100"
                android:gravity="center"
                android:padding="10dp"
                android:text="历史续费记录"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
